<%- include('../contest/header');  -%>

<form class="form-group" action="/submissions/submit" method="POST" enctype="multipart/form-data" >
  <input type="hidden" name="cid" value="<%=contest._id%>">
  <div class="form-group">
    <label for="Problemselect">Problem Name</label>
    <select class="form-control" id="Problemselect" name="pid" required>
      <option value=""> Select Problem </option>
      <%contest.problems.forEach(function(problem){%>
      <option value="<%=problem._id%>"><%=problem.name%></option>
      <%})%>
    </select>
  </div>
  <div class="form-group">
    <label for="sourcefile">Upload Source code file</label>
    <input type="file" class="form-control-file" id="sourcefile">
  </div>
  <div class="form-group">
    <label for="code">Source Code</label>
    <textarea class="form-control" name="code" id="code" rows="20"></textarea>
  </div>
  <input type="submit" class="btn btn-primary" value="Submit" class="submitButton">
  </textarea>
</form>