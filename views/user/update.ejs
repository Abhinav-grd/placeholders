<div class="card" style="width: 50%; margin: auto;">
    <article class="card-body">
        <h4 class="card-title text-center mb-4 mt-1">Update Profile</h4>
        <hr>
        <form method="POST" action="<%=user.url%>/update">
            <input type="hidden" name="uid" value="<%=user._id%>">

            <div class="form-group">
                <label for="email" class="col-md-3 control-label">Email</label>
                <div class="col">
                    <input type="text" class="form-control" name="email" placeholder="Email Address"
                        value="<%=user.email%>" disabled>
                </div>
            </div>
            <div class="form-group">
                <label for="firstname" class="col-md-3 control-label">First Name</label>
                <div class="col">
                    <input type="text" class="form-control" name="firstname" placeholder="First Name"
                        value="<%=user.firstname%>">
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-md-3 control-label">Last Name</label>
                <div class="col">
                    <input type="text" class="form-control" name="lastname" placeholder="Last Name"
                        value="<%=user.lastname%>">
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-md-3 control-label">Username</label>
                <div class="col">
                    <input type="text" class="form-control" name="username" placeholder="Username"
                        value="<%=user.username%>">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col control-label">New Password</label>
                <div class="col">
                    <input type="password" class="form-control" name="password" placeholder="New Password"/>
                </div>
            </div>
            <div class="form-group">
                <!-- Button -->
                <div class="col-md-offset-3 col">
                    <button id="btn-signup" type="submit" class="btn btn-success"> Update</button>
                </div>
            </div>
        </form>
    </article>
</div> <!-- card.// -->

</aside> <!-- col.// -->
</div> <!-- row.// -->